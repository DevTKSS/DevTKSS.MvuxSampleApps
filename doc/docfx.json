{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "output": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "markdownEngineProperties": {
      "markdigExtensions": [
        "yaml",
        "listextras",
        "definitionlists",
        "bootstrap",
        "globalization",
        "advanced"
      ]
    },
    "globalMetadata": {
      "_appName": "DevTKSS.Uno.SampleApps",
      "_appTitle": "DevTKSS.Uno.SampleApps",
      "_enableSearch": false,
      "pdf": false
    }
  }
}
